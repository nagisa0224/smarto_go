<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>Shop詳細</h4>
    </div>
    
    <div class="row">
      <div class="col-md-9">
        <table class="table table-bordered">
          <tr>
            <td>お店の名前</td>
            <td><%= @shop.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @shop.email %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td>
              <% if @shop.is_admission == true %>
                <strong>退会</strong>
              <% else %>
                <strong>有効</strong>
              <% end %>
            </td>
          </tr>
        </table>
        <%= link_to "編集する", edit_admin_shop_path, class: "btn btn-success mr-5" %>
      </div>
    </div>
  </div>
</div>