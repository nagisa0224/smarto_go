<div class="container-fluid">
  <div class="row">
    <h2 class="text-center mx-auto page-title"> Shop一覧 </h2>
    
    <div class="col-md-11 mt-2 text-right">
      <%= form_with url: search_admin_shops_path, method: :get do |f| %>
        <%= f.label :keyword, "名前で検索", class: "custom-label-class" %>
        <%= f.text_field :keyword %>
        <%= f.submit "検索", class: "btn", style: "background-color: #FF2E63; color:white;" %>
      <% end %>
    </div>
    
    <div class="container col-8">
      <div class="row">
        <div class="table-responsive mr-4">
          <table class="table table-index">
            <thead>
              <tr>
                <th class="col-2 text-center">お店id</th>
                <th class="col-2 text-center">お店の名前</th>
                <th class="col-2 text-center">ステータス</th>
              </tr>
            </thead>
            
            <tbody>
              <% @shops.each do |shop| %>
                <tr>
                  <td><%= shop.id %></td>
                  <td>
                    <%= link_to admin_shop_path(shop.id), class: "link" do %>
                      <%= shop.name %>
                    <% end %>
                  </td>
                  <td>
                    <% if shop.is_admission == true %>
                      <p class="text-success">稼働中</p>
                    <% else %>
                      <p class="text-danger">退会済</p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <%= paginate @shops, class: "pagenation" %>
    </div>
  </div>
</div>