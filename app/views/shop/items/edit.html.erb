<div class="container-fluid">
  <div class="row">
    <h2 class="page-title text-center mx-auto"> 商品情報編集 </h2>
    <div class="col-12">
      <div class="col-md-6 mt-5 mx-auto">
        
        <div class="text-danger text-center">
          <%= flash[:alert] %>
        </div>
        
        <div class="return-button text-right mb-1">
          <%= link_to "戻る", item_path(@item), class: "btn", style: "background-color: #08D9D6; color:white;" %>
        </div>
        
        <div class="form">
          <%= form_with model: @item, url: item_path(@item) do |f| %>
            <div class="form-group text-center">
              <%= f.label :image, "商品画像", class: "class_label" %>
              </br>
              <%= f.file_field :image, accept: "image/*" %>
            </div>
            
            <div class="form-group">
              <%= f.label :product_name, "商品名 (必須)", class: "class_label" %>
              </br>
              <%= f.text_field :product_name, class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= f.label :stock, "在庫数", class: "class_label" %>
              </br>
              <%= f.text_field :stock, class: "form-control" %>
            </div>
              
            <div class="form-group">
              <%= f.label :minimum_stock, "最低在庫数", class: "class_label" %>
              </br>
              <%= f.text_field :minimum_stock, class: "form-control" %>
            </div>
              
            <div class="form-group">
              <%= f.label :introduction, "備考", class: "class_label" %>
              </br>
              <%= f.text_area :introduction, class: "form-control" %>
            </div>
              
            <div class="form-group text-center">
              <%= f.label :is_active, "販売ステータス (必須)", class: "class_label" %>
              </br>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中" %>
              </br>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active,"販売停止" %>
            </div>
              
            <div class="form-group text-center">
              <%= f.submit "変更を保存", class: "btn", style: "background-color: #08D9D6; color: white; mx-3" %>
            </div>
          <% end %>
          
          </br>
          <div class="delete-button text-center mt-3 mb-3">
            <%= link_to "商品を削除", item_path, method: :delete, data: {confirm: "削除しますか？"}, class: "btn", style: "background-color: #FF2E63; color: white; mx-3" %>
          </div>
          
        </div>
        
      </div>
    </div>
  </div>
</div>