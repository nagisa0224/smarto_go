<div class="container-fluid">
  <div class="row">
    <h2 class="mt-3 ml-2 item-title text-center mx-auto"></h2>
    <div class="col-12">
      <div class="col-md-6 mt-5 mx-auto">
        
        <div class="text-right mb-1 return-button">
          <%= link_to "戻る", item_path(@item), class: "btn", style: "background-color: #64CCC5; color:white;" %>
        </div>
        
        <div class="form text-center">
          <%= form_with model: @item, url: item_path(@item) do |f| %>
            <div class="form-group form-image">
              <%= f.label :image, "商品画像", class: "class_label" %>
              </br>
              <%= f.file_field :image, accept: "image/*" %>
            </div>
            
            <div class="form-group form-product_name">
              <%= f.label :product_name, "商品名 (必須)", class: "class_label" %>
              </br>
              <%= f.text_field :product_name, class: "form-control" %>
            </div>
            
            <div class="form-group form-stock">
              <%= f.label :stock, "在庫数", class: "class_label" %>
              </br>
              <%= f.text_field :stock, class: "form-control" %>
            </div>
              
            <div class="form-group form-minimum_stock">
              <%= f.label :minimum_stock, "最低在庫数", class: "class_label" %>
              </br>
              <%= f.text_field :minimum_stock, class: "form-control" %>
            </div>
              
            <div class="form-group form-introduction">
              <%= f.label :introduction, "備考", class: "class_label" %>
              </br>
              <%= f.text_area :introduction, class: "form-control" %>
            </div>
              
            <div class="form-group form-radio_button">
              <%= f.label :is_active, "販売ステータス (必須)", class: "class_label" %>
              </br>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中" %>
              </br>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active,"販売停止" %>
            </div>
              
            <div class="form-group text-center">
              <%= f.submit "変更を保存", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            </div>
          <% end %>
          
          </br>
          <div class="delete-button">
            <%= link_to "商品を削除", item_path, method: :delete, class: "btn btn-sm btn-danger" %>
          </div>
          
        </div>
        
      </div>
    </div>
  </div>
</div>