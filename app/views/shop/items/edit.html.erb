<div class="container-fluid">
  <div class="row">
    <h2 class="mt-3 ml-2 item-title text-center mx-auto"></h2>
    <div class="col-12">
      <div class="col-md-6 mt-5 mx-auto">
        
        <div class="text-right mb-1 return-button">
          <%= link_to "戻る", item_path(@item), class: "btn", style: "background-color: #64CCC5; color:white;" %>
        </div>
        
      </div>
    </div>
  </div>
</div>




<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h4 class="mt-3 mb-5">商品編集ページ</h4>
      <%= link_to "商品を削除", item_path, method: :delete, class: "btn btn-sm btn-danger" %>
     <%= form_with model: @item, url: item_path(@item) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :product_name %></td>
          </tr>
          <tr>
            <td>在庫数</td>
            <td><%= f.text_field :stock %></td>
          </tr>
          <tr>
            <td>最低在庫数</td>
            <td><%= f.text_field :minimum_stock %></td>
          </tr>
          <tr>
            <td>備考</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= f.radio_button :is_active, true %>
                <%= f.label :is_active, "販売中" %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active,"販売停止" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "変更を保存", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>