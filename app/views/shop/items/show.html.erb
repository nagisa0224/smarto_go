<div class="container-fluid">
  <div class="row">
    <h2 class="mt-3 ml-2 to_go-title text-center mx-auto">- 商品詳細 -</h2>
    <div class="col-12">
      <div class="col-md-8 mt-5 mx-auto">
        
        <div class="text-right mb-3 return-button">
          <%= link_to "戻る", items_path, class: "btn btn-primary" %>
        </div>
        
        <div class="row">
          <div class="col-md-6">
            <div class="display-image">
              <%= image_tag @item.image, size: "350x250", class: "img-fluid" %>
            </div>
          </div>
          
          <div class="col-md-6">
            <table class="table table-borderless">
              <tr>
                <td class="class-td">商品名</td>
                <td><%= @item.product_name %></td>
              </tr>
              <tr>
                <td class="class-td">在庫数</td>
                <td><%= @item.stock %></td>
              </tr>
              <tr>
                <td class="class-td">最低在庫数</td>
                <td><%= @item.minimum_stock %></td>
              </tr>
              <tr>
                <td class="class-td">備考</td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td class="class-td">販売ステータス</td>
                <td><%= @item.item_status %></td>
              </tr>
            </table>
          </div>
        </div>
        
        <div class="item-button text-center mt-5">
          <%= link_to "編集する", edit_item_path(@item), class: "btn btn-primary" %>
        </div>
        
      </div>
    </div>
  </div>
</div>
