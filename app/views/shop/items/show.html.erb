<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>商品詳細</h4>
      <%= image_tag @item.image, size: "300x200" %>
    </div>
    
    <div class="col-md-8 mt-5">
      <table class="table table-borderless">
          <tr>
            <td>商品名</td>
            <td><%= @item.product_name %></td>
          </tr>
          <tr>
            <td>在庫数</td>
            <td><%= @item.stock %></td>
          </tr>
          <tr>
            <td>最低在庫数</td>
            <td><%= @item.minimum_stock %></td>
          </tr>
          <tr>
            <td>備考</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.item_status %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to "編集する", edit_item_path(@item), class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            </td>
          </tr>
        </table>
      
    </div>
  </div>
</div>