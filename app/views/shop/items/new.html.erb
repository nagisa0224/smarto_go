<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      
      <%= form_with model: [:admin, @item], url: admin_items_path, method: :post do |f| %>
      <table class="table table-borderless">
        <h4 class="mt-3 mb-5">商品新規登録</h4>
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :item_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, :placeholder => "商品名" %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :explanation, :placeholder => "ここに説明文を記述します" %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.select :genre_id, @genres,inckude_blank: "--選択してください" %></td>
        </tr>
        <tr>
          <td>税抜き価格</td>
          <td><%= f.text_field :price, :placeholder => "1000" %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active,"販売中止" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "新規登録", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
            <% end %>
          </td>
        </tr>
      </table>
      
    </div>
  </div>
</div>