<div class="container-fluid">
  <div class="row">
    <h2 class="mt-3 ml-2 to_go-title text-center mx-auto">- Shop 情報編集 -</h2>
    <div class="col-12">
      <div class="col-md-6 mt-5 mx-auto">
        
        <div class="text-right mb-1 return-button">
          <%= link_to "戻る", shops_my_page_path, class: "btn", style: "background-color: #64CCC5; color:white;" %>
        </div>
        
        <%= form_with model: @shop, url: shops_information_path, method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :name, "お店の名前（必須）", class: "class_label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :email, "メールアドレス（必須）", class: "class_label" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          
          <div class="form-group text-center">
            <%= f.submit "編集内容を保存", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
          </div>
          
          <div class="text-left confirm_withdraw-button">
            <%= link_to "退会する", shops_confirm_withdraw_path, class: "btn", style: "background-color: #64CCC5; color: white; mx-3"%>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>