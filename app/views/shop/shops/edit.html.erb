<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">

        <div class="col-md-2">
          <h4 style="background-color:#C2EEFF">　Shop 情報編集　</h4>
        </div>
      <br>
      <br>

        <%= form_with model: @shop, url: shops_information_path, method: :patch do |f| %>
          <div class="col-md-4">
            <%= f.text_field :name %>
          </div>

          <div class="col-md-4">
            <%= f.text_field :email %>
          </div>

          <div class="col-md-4">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>

          <div class="col-md-4">
            <%= link_to "退会する", shops_confirm_withdraw_path, class: "btn btn-danger" %>
          </div>
        <% end %>

    </div>
  </div>
</div>
