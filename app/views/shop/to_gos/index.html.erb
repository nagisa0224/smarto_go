<div class="container">
  <div class="row">
    <div class="col">
      <h3>To go予約一覧</h3>
      
      <div class="to_gp-plus">
        <%= link_to "新規予約追加", new_to_go_path, class: "btn", style: "background-color: #64CCC5; color:white;" %>
      </div>
      
      <%= form_with url: search_path, method: :get do |f| %>
        <%= f.label :keyword, "名前で検索" %>
        <%= f.text_field :keyword %>
        <%= f.submit "検索" %>
      <% end %>
      

      
      <div class="to_go-index">
        <table class="table">
          
          <thead>
            <tr>
              <th>名前</th>
              <th>日付</th>
              <th>時間</th>
              <th>備考</th>
              <th>チェック</th>
            </tr>
          </thead>
          
          <tbody>
            <% @to_gos.each do |to_go| %>
              <tr>
                <td>
                  <%= link_to to_go_path(to_go.id), class: "link" do %>
                  <%= to_go.customer_name %>
                  <% end %>
                </td>
                <td><%= to_go.date %></td>
                <td><%= to_go.time %></td>
                <td><%= to_go.body %></td>
                <td>
                  <%#= check_box :to_go, :to_go_ids, {class: "check_box"}, true, false %>
                  <%= form_with model: to_go, url: change_status_path(to_go) do |f| %>
                    <%= f.submit to_go.status == true ? "受け取り済み" : "受け渡し前" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          
        </table>
      </div>
      
    </div>
  </div>
</div>