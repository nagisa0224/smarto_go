<div class="container-fluid">
  <div class="row">
    <h2 classx="mt-3 ml-2 history-title">- To go予約履歴一覧 -</h2>
    <div class="col-12">
      
      <div class="col-md-11 mt-2 text-right">
        <%= form_with url: search_path, method: :get do |f| %>
          <%= f.label :keyword, "名前で検索", class: "custom-label-class" %>
          <%= f.text_field :keyword %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
      
      <div class="container col-6 mt-3">
        <div class="row">
          <div class="table-responsive mr-4">
            <table class="table">
              <thead>
                <tr>
                  <th class="col-2 text-center">名前</th>
                  <th class="col-2 text-center">日付</th>
                </tr>
              </thead>
              
              <tbody>
                <% @to_gos.each do |to_go| %>
                  <tr>
                    <td>
                      <%= link_to history_show_path(to_go.id), class: "link" do %>
                        <%= to_go.customer_name %>様
                      <% end %>
                    </td>
                    <td><%= to_go.date %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>