<div class="container-fluid">
  <div class="row">
    <h3 class="mt-3 ml-2 index-title">To go予約新規登録</h3>
    <div class="col-12">
      <div class="col-md-7 mt-5 mx-auto">
        
        <div class="text-right mb-1 to_go-button">
          <%= link_to "戻る", to_gos_path, class: "btn", style: "background-color: #64CCC5; color:white;" %>
        </div>
        
        <%= form_with model: @to_go, url: to_gos_path, method: :post do |f| %>
        
          <div class="form-name">
            <%= f.label :customer_name, "名前" %>
            </br>
            <%= f.text_field :customer_name %>
          </div>
          <div class="form-address">
            <%= f.label :address, "連絡先" %>
            </br>
            <%= f.text_field :address %>
          </div>
          <div class="form-date">
            <%= f.label :date, "日付" %>
            </br>
            <%= f.date_field :date %>
          </div>
          <div class="form-time">
            <%= f.label :time, "時間" %>
            </br>
            <%= f.text_field :time %>
          </div>
          
          <div id="reservation_details">
            <%= f.fields_for :reservation_details do |detail_form| %>
              <%= render 'reservation_detail_fields', f: detail_form %>
            <% end %>
            <div class="links">
              <%= link_to_add_association '追加', f, :reservation_details %>
            </div>
          </div>
          
          <div class="form-body">
            <%= f.label :body, "備考" %>
            </br>
            <%= f.text_area :body %>
          </div>
          <div class="button">
            <%= f.submit "新規登録", class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
          </div>
          
        <% end %>
        
        
        
      </div>
    </div>
  </div>
</div>