<div class="container-fluid">
  <div class="row">
    <h3 class="page-title text-center mx-auto"> To go予約編集 </h3>
    <div class="col-12">
      <div class="col-md-6 mt-5 mx-auto">
        
        <div class="return-button text-right mb-1">
          <%= link_to "戻る", to_go_path(@to_go), class: "btn", style: "background-color: #08D9D6; color:white;" %>
        </div>
        
        <%= form_with model: @to_go, url: to_go_path(@to_go), local: true do |f| %>
        
          <div class="form-group">
            <%= f.label :customer_name, "名前 (必須)", class: "class_label" %>
            <%= f.text_field :customer_name, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :address, "連絡先", class: "class_label" %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :date, "日付 (必須)", class: "class_label" %>
            <%= f.date_field :date, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :time, "時間", class: "class_label" %>
            <%= f.text_field :time, class: "form-control" %>
          </div>
          
          <div id="reservation_details" class="form-group">
            <%= f.label :product_name, "予約商品 (必須)", class: "class_label" %>
            <%= f.fields_for :reservation_details do |detail_form| %>
              <%= render 'reservation_detail_fields', f: detail_form %>
            <% end %>
            <div class="links">
              <%= link_to_add_association "追加", f, :reservation_details, class: "btn", style: "background-color: #08D9D6; color: white;" %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :body, "備考", class: "class_label" %>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          
          <div class="form-group text-center">
            <%= f.submit "変更を保存", class: "btn", style: "background-color: #08D9D6; color: white; mx-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>