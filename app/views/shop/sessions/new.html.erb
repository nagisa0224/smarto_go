<div class="container-fluid">
  <div class="row">
    <div class="col-12 registration-form">
      <h2 class="ses-reg-title mb-3"><span> ログイン </span></h2>
      <div class="sign-in-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
          <div class="log-in-field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="log-in-field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="log-in-field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          
          <div class="sign-in-button text-center mt-3">
            <%= f.submit "ログイン", class: "btn", style: "background-color: #FF2E63; color: white; mx-3" %>
          </div>
          
        <% end %>
        <%= render "shop/shared/links" %>
      </div>
    </div>
  </div>
</div>